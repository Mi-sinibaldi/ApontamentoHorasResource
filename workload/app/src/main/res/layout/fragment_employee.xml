<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4050D5"
    tools:context=".ui.employee.EmployeeFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="410dp"
        android:layout_height="229dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/id_recyclerview_employee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_recource"
            android:layout_width="99dp"
            android:layout_height="11dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/logo_resource"
            app:layout_constraintEnd_toEndOf="@+id/text_employee"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintStart_toStartOf="@+id/text_employee"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_employee"
            android:layout_width="183dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/colaboradores"
            android:textColor="@color/colorWhite"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView_desc"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView_desc"
            app:layout_constraintTop_toBottomOf="@+id/imageView_recource" />

        <TextView
            android:id="@+id/textView_desc"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:fontFamily="@font/open_sans"
            android:text="@string/lista_de_colaboradores_cadastrados"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/edit_text_employee"
            app:layout_constraintHorizontal_bias="0.007"
            app:layout_constraintStart_toStartOf="@+id/edit_text_employee"
            app:layout_constraintTop_toBottomOf="@+id/text_employee" />

        <EditText
            android:id="@+id/edit_text_employee"
            android:layout_width="331dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:paddingLeft="45dp"
            android:paddingRight="10dp"
            android:maxLines="1"
            android:hint="@string/pesquisar"
            android:layout_marginBottom="8dp"
            android:textCursorDrawable="@drawable/color_cusor"
            android:background="@drawable/seach_employee"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_desc" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:src="@mipmap/ic_search"
            app:layout_constraintBottom_toBottomOf="@+id/edit_text_employee"
            app:layout_constraintEnd_toEndOf="@+id/edit_text_employee"
            app:layout_constraintHorizontal_bias="0.033"
            app:layout_constraintStart_toStartOf="@+id/edit_text_employee"
            app:layout_constraintTop_toTopOf="@+id/edit_text_employee"
            app:layout_constraintVertical_bias="0.59000003" />
    </android.support.constraint.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_recyclerview_employee"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />



</androidx.constraintlayout.widget.ConstraintLayout>