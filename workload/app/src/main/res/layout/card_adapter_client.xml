<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_client"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLogin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_card_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/button_customized_client_adapter"
        android:minHeight="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_view_client_adapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            android:text="@string/customer"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/button_card_client"
            app:layout_constraintEnd_toStartOf="@+id/image_view_delete_client"
            app:layout_constraintStart_toStartOf="@+id/button_card_client"
            app:layout_constraintTop_toTopOf="@+id/button_card_client" />

        <ImageView
            android:id="@+id/image_view_icon_adapter_client"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginEnd="4dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/button_card_client"
            app:layout_constraintEnd_toEndOf="@+id/button_card_client"
            app:layout_constraintTop_toTopOf="@+id/button_card_client"
            app:srcCompat="@drawable/ic_arrow_right_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/image_view_delete_client"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/button_card_client"
            app:layout_constraintEnd_toEndOf="@+id/image_view_icon_adapter_client"
            app:layout_constraintTop_toTopOf="@+id/button_card_client"
            app:srcCompat="@mipmap/ic_delete" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>